{% extends "_layout" %}

{% set body_classes = "inner" %}

{% block content %}
<div class="container">
    <h1>{{ entry.title}}</h1>
    <div>
        {{ entry.richText}}
    </div>
    
    
</div>

{% for block in entry.flexibleContentTest.all() %}
  {% if block.type == "hoverModules" %}

    {% for row in block.hoverModuleTable %}
      <div class="hoverModules">
<div class="container">
      {% for matrixBlock in row.hoverModulesContainer.all() %}

        {% if matrixBlock.type == "module" %}

  <div class="card">
            <h4>{{matrixBlock.moduleTitle}}</h4>
            <p>
              Standard chunk of Lorem Ipsum used since the 1500s is showed below
              for those interested. 
            </p>
            <div class="shine"></div>
            <div class="background">
              <div class="tiles">
                <div class="tile tile-1"></div>
                <div class="tile tile-2"></div>
                <div class="tile tile-3"></div>
                <div class="tile tile-4"></div>
                <div class="tile tile-5"></div>
                <div class="tile tile-6"></div>
                <div class="tile tile-7"></div>
                <div class="tile tile-8"></div>
                <div class="tile tile-9"></div>
                <div class="tile tile-10"></div>
              </div>

              <div class="line line-1"></div>
              <div class="line line-2"></div>
              <div class="line line-3"></div>
            </div>
          </div>

          

        {% endif %}

      {% endfor %}
        </div>
</div>
    {% endfor %}

  {% endif %}
{% endfor %}

{% endblock %}