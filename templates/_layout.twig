<!DOCTYPE html>
<html lang="{{ craft.app.language }}">
  <head>
    <meta charset="utf-8"/>
    <title>{{ siteName }}</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Barlow+Condensed:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Barlow:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Barlow+Condensed:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Barlow:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <style>
    body {
      background-color: {{ theme.backgroundColor }};
      color: {{ theme.color }};
    }
  </style>

    {% do craft.app.view.registerCssFile('@web/styles.css') %}

    {% set navSegment = craft.app.request.getSegment(1) %}

  </head>
  <body class="{{ body_classes|default('home-page')}} {{navSegment}}">
  
    <header>
        <div class="container">
            <a class="logo" href="{{ siteUrl }}" alt={{siteName}}>
                <img src="../images/paymentus-logo.svg" />
            </a>

            <nav>
                <ul>
                {% for link in header.navLinks.all() %}

                    {% set destination = link.linkDestination.one() %}
                    <li>
                        <a href="{{destination.url}}" class="{{ navSegment == '' ? 'active' : 'inactive' }}">{{link.linkText}}</a>
                    </li>
                {% endfor %}
                </ul>
            </nav>
        </div>
    </header>
 
   {% block content %}


    {% endblock %}

    <footer>
      {{ footer.richText }}
    </footer>
  </body>
</html>